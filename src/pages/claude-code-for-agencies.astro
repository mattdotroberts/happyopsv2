<script>
  const form = document.getElementById('lead-form') as HTMLFormElement;
  const formContainer = document.getElementById('form-container');
  const successTemplate = document.getElementById('success-template') as HTMLTemplateElement;

  const loadCalScript = () => {
    return new Promise<void>((resolve) => {
      if ((window as any).Cal) {
        resolve();
        return;
      }
      const script = document.createElement('script');
      script.src = 'https://app.cal.com/embed/embed.js';
      script.async = true;
      script.onload = () => resolve();
      document.head.appendChild(script);
    });
  };

  const showSuccessState = async () => {
    if (!formContainer || !successTemplate) return;
    const successContent = successTemplate.content.cloneNode(true);
    formContainer.innerHTML = '';
    formContainer.appendChild(successContent);

    await loadCalScript();
    setTimeout(() => {
      const Cal = (window as any).Cal;
      if (Cal) {
        Cal('init', '30min', { origin: 'https://app.cal.com' });
        Cal.ns['30min']('inline', {
          elementOrSelector: '#cal-embed',
          config: { layout: 'month_view' },
          calLink: 'happyoperators/30min',
        });
      }
    }, 100);
  };

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const emailInput = form.querySelector('input[type="email"]') as HTMLInputElement;
    const submitBtn = form.querySelector('.form-submit') as HTMLButtonElement;
    const email = emailInput?.value;
    if (!email) return;

    const originalText = submitBtn.textContent;
    submitBtn.textContent = 'Sending...';
    submitBtn.disabled = true;

    try {
      await fetch('https://hook.relay.app/api/v1/playbook/cml9dzhob05wv0om85d045ygw/trigger/tRpfA-B2gYOIAyWFZpeHJg', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, source: 'claude-code-guide' }),
      });
      await showSuccessState();
    } catch (error) {
      await showSuccessState();
    }
  });
</script>

<style>
  .hero {
    text-align: center;
    padding: var(--space-2xl) 0 var(--space-3xl);
    max-width: 700px;
    margin: 0 auto;
  }

  .hero__label {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-accent-primary);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-md);
    padding: var(--space-xs) var(--space-sm);
    background: rgba(242, 106, 61, 0.1);
    border-radius: 999px;
  }

  .hero__title {
    font-family: var(--font-serif);
    font-size: var(--text-4xl);
    font-weight: 500;
    margin-bottom: var(--space-md);
    line-height: var(--leading-tight);
  }

  .hero__subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--space-3xl);
    align-items: start;
    max-width: 1300px;
    margin: 0 auto;
  }

  @media (max-width: 1024px) {
    .content-grid {
      grid-template-columns: 1fr;
    }
    .form-column {
      order: -1;
    }
  }

  .content-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .section__title {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-lg);
  }

  .section__intro {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .feature-list__item {
    display: flex;
    gap: var(--space-md);
    align-items: flex-start;
  }

  .feature-list__icon {
    font-size: 1.5rem;
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius-md);
  }

  .feature-list__item strong {
    display: block;
    font-size: var(--text-base);
    margin-bottom: var(--space-xs);
  }

  .feature-list__item p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--leading-relaxed);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
  }

  @media (max-width: 800px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 500px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }

  .skill-card {
    padding: var(--space-lg);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
  }

  .skill-card__command {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-accent-primary);
    background: rgba(242, 106, 61, 0.1);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--border-radius-sm);
    margin-bottom: var(--space-sm);
  }

  .skill-card__desc {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--leading-relaxed);
  }

  .testimonial {
    padding: var(--space-xl);
    background: var(--color-bg-secondary);
    border-left: 4px solid var(--color-accent-primary);
    border-radius: 0 var(--border-radius-md) var(--border-radius-md) 0;
    margin: 0;
  }

  .testimonial p {
    font-family: var(--font-serif);
    font-size: var(--text-lg);
    font-style: italic;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-md);
    line-height: var(--leading-relaxed);
  }

  .testimonial cite {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: normal;
  }

  .form-column {
    position: sticky;
    top: calc(var(--space-xl) + 40px);
  }

  .form-card {
    padding: var(--space-xl);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
  }

  .form-card__title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-sm);
  }

  .form-card__subtitle {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  .lead-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .form-input {
    padding: var(--space-md);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-sm);
    font-size: var(--text-base);
    color: var(--color-text-primary);
    transition: border-color var(--transition-fast);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-accent-primary);
  }

  .form-input::placeholder {
    color: var(--color-text-muted);
  }

  .form-submit {
    width: 100%;
    padding: var(--space-md) var(--space-lg);
    font-weight: 600;
  }

  .form-card__note {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-align: center;
    margin: var(--space-md) 0 0;
  }

  .success-state {
    text-align: center;
  }

  .success-state__header {
    margin-bottom: var(--space-xl);
  }

  .success-state__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: #22C55E;
    color: white;
    border-radius: 50%;
    font-size: 1.5rem;
    margin-bottom: var(--space-md);
  }

  .success-state__title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-xs);
  }

  .success-state__text {
    color: var(--color-text-secondary);
    margin: 0;
  }

  .success-state__divider {
    height: 1px;
    background: var(--color-border);
    margin: var(--space-xl) 0;
  }

  .success-state__cta-text {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  .cal-embed {
    min-height: 400px;
    border-radius: var(--border-radius-md);
    overflow: hidden;
  }
</style>
