---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import BlogCard from '../../../components/BlogCard.astro';
import { getAllTags, getPostsByTag } from '../../../lib/notion';

export async function getStaticPaths() {
  const tags = await getAllTags();
  return tags.map((tag) => ({
    params: { tag: tag.toLowerCase().replace(/\s+/g, '-') },
    props: { tagName: tag },
  }));
}

const { tagName } = Astro.props;
const posts = await getPostsByTag(tagName);
---

<BaseLayout
  title={`${tagName} - Blog`}
  description={`Articles tagged with ${tagName}`}
>
  <div class="container">
    <header class="page-header">
      <a href="/blog" class="back-link">&larr; All posts</a>
      <h1 class="page-header__title">
        <span class="tag-label">Tag:</span> {tagName}
      </h1>
      <p class="page-header__subtitle">
        {posts.length} {posts.length === 1 ? 'post' : 'posts'} tagged with "{tagName}"
      </p>
    </header>

    <hr />

    {posts.length > 0 ? (
      <section class="blog-grid stagger-children">
        {posts.map((post) => (
          <BlogCard post={post} />
        ))}
      </section>
    ) : (
      <p class="empty-state">No posts found with this tag.</p>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    padding: var(--space-2xl) 0;
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-accent-primary);
  }

  .page-header__title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-md);
  }

  .tag-label {
    color: var(--color-text-muted);
    font-weight: 400;
  }

  .page-header__subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--space-xl);
    padding: var(--space-xl) 0;
  }

  @media (min-width: 640px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .empty-state {
    text-align: center;
    padding: var(--space-4xl) 0;
    color: var(--color-text-muted);
  }
</style>
