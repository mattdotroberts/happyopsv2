---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTASection from '../components/CTASection.astro';

const frameworks = [
  {
    step: "01",
    title: "Discovery",
    subtitle: "Find your focus",
    duration: "Half day",
    description: "Map your AI landscape. Identify high-impact opportunities. Leave with a prioritised roadmap.",
    image: "/images/workshops/discovery.jpg"
  },
  {
    step: "02",
    title: "Hackathon",
    subtitle: "Build real solutions",
    duration: "1-3 days",
    description: "Hands-on building with expert guidance. Walk away with working prototypes, not just slides.",
    image: "/images/workshops/hackathon.jpg"
  },
  {
    step: "03",
    title: "Bootcamp",
    subtitle: "Full transformation",
    duration: "3-10 weeks",
    description: "Turn your team into AI Operators who can build, deploy, and maintain AI solutions independently.",
    image: "/images/workshops/bootcamp.jpg"
  }
];

const galleryImages = [
  "/images/workshops/gallery/1.jpg",
  "/images/workshops/gallery/2.jpg",
  "/images/workshops/gallery/3.jpg",
  "/images/workshops/gallery/4.jpg",
  "/images/workshops/gallery/5.jpg",
  "/images/workshops/gallery/6.jpg",
  "/images/workshops/gallery/7.jpg",
  "/images/workshops/gallery/8.jpg",
];
---

<BaseLayout
  title="AI Training"
  description="Three training formats to build AI capability across your agency. From discovery workshops to full transformation bootcamps."
>
  <!-- Hero -->
  <section class="hero">
    <div class="hero__background">
      <img src="/images/workshops/hero.jpg" alt="Workshop in action" />
      <div class="hero__overlay"></div>
    </div>
    <div class="container hero__content">
      <span class="hero__label">AI Training</span>
      <h1 class="hero__title">Build AI capability.<br/>Not dependency.</h1>
      <p class="hero__subtitle">Three formats. One goal: your team, transformed.</p>
    </div>
  </section>

  <!-- Quick Nav -->
  <nav class="quick-nav">
    <div class="container">
      <div class="quick-nav__items">
        {frameworks.map((f) => (
          <a href={`#${f.title.toLowerCase()}`} class="quick-nav__item">
            <span class="quick-nav__step">{f.step}</span>
            <span class="quick-nav__title">{f.title}</span>
            <span class="quick-nav__duration">{f.duration}</span>
          </a>
        ))}
      </div>
    </div>
  </nav>

  <!-- The Framework -->
  <section class="framework">
    <div class="container">
      <header class="framework__header">
        <h2 class="framework__title">The Framework</h2>
        <p class="framework__intro">
          AI isn't a tool you bolt on. It's a capability you build. Start where you are, climb as high as you need.
        </p>
      </header>
    </div>

    <div class="framework__steps">
      {frameworks.map((f, i) => (
        <article class="step" id={f.title.toLowerCase()}>
          <div class="step__image">
            <img src={f.image} alt={f.title} loading={i === 0 ? "eager" : "lazy"} />
            <div class="step__number">{f.step}</div>
          </div>
          <div class="container">
            <div class="step__content">
              <div class="step__meta">
                <span class="step__duration">{f.duration}</span>
              </div>
              <h3 class="step__title">{f.title}</h3>
              <p class="step__subtitle">{f.subtitle}</p>
              <p class="step__description">{f.description}</p>
              <a href="/contact" class="step__cta">
                Get started <span class="step__arrow">→</span>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- Gallery -->
  <section class="gallery">
    <div class="container">
      <h2 class="gallery__title">In Action</h2>
    </div>
    <div class="gallery__grid">
      {galleryImages.map((src, i) => (
        <div class="gallery__item" style={`--delay: ${i * 0.05}s`}>
          <img src={src} alt="Workshop moment" loading="lazy" />
        </div>
      ))}
    </div>
  </section>

  <!-- What You Get -->
  <section class="details">
    <div class="container">
      <div class="details__grid">
        <div class="details__card">
          <h3 class="details__card-title">Discovery Workshop</h3>
          <ul class="details__list">
            <li>AI Business Canvas assessment</li>
            <li>Problem discovery & ranking</li>
            <li>Problem-to-feature mapping</li>
            <li>Prioritised solution roadmap</li>
          </ul>
          <p class="details__best-for">
            <strong>Best for:</strong> Teams starting their AI journey who need clarity before action.
          </p>
        </div>
        <div class="details__card">
          <h3 class="details__card-title">Hackathon</h3>
          <ul class="details__list">
            <li>Hands-on tool training</li>
            <li>Guided prototype building</li>
            <li>On-demand expert support</li>
            <li>Working solutions, not slides</li>
          </ul>
          <p class="details__best-for">
            <strong>Best for:</strong> Teams ready to move from planning to building.
          </p>
        </div>
        <div class="details__card">
          <h3 class="details__card-title">Bootcamp</h3>
          <ul class="details__list">
            <li>Foundations: databases, APIs, UI</li>
            <li>AI platforms deep dive</li>
            <li>Automation tools mastery</li>
            <li>Prototype to production</li>
          </ul>
          <p class="details__best-for">
            <strong>Best for:</strong> Building internal AI capability and centres of excellence.
          </p>
        </div>
      </div>
    </div>
  </section>

  <CTASection
    headline="Most teams start with Discovery"
    description="One day of clarity saves months of misdirected effort."
    ctaText="Book a call"
    ctaHref="/contact"
    variant="centered"
  />
</BaseLayout>

<style>
  /* Hero */
  .hero {
    position: relative;
    height: 70vh;
    min-height: 500px;
    display: flex;
    align-items: flex-end;
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    inset: 0;
  }

  .hero__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0.4) 100%
    );
  }

  .hero__content {
    position: relative;
    z-index: 1;
    padding-bottom: var(--space-3xl);
    color: white;
  }

  .hero__label {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-md);
  }

  .hero__title {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 400;
    line-height: 1.1;
    margin-bottom: var(--space-md);
    color: #ffffff;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  .hero__subtitle {
    font-size: var(--text-xl);
    color: rgba(255, 255, 255, 0.9);
    max-width: 400px;
  }

  /* Quick Nav */
  .quick-nav {
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .quick-nav__items {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  .quick-nav__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-lg) var(--space-md);
    text-decoration: none;
    color: var(--color-text-primary);
    border-right: 1px solid var(--color-border);
    transition: background var(--transition-fast);
  }

  .quick-nav__item:last-child {
    border-right: none;
  }

  .quick-nav__item:hover {
    background: var(--color-bg-tertiary);
  }

  .quick-nav__step {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-accent-primary);
  }

  .quick-nav__title {
    font-weight: 600;
    font-size: var(--text-lg);
  }

  .quick-nav__duration {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  /* Framework */
  .framework {
    padding: var(--space-4xl) 0 0;
  }

  .framework__header {
    max-width: 600px;
    margin-bottom: var(--space-4xl);
  }

  .framework__title {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-accent-primary);
    margin-bottom: var(--space-md);
  }

  .framework__intro {
    font-family: var(--font-serif);
    font-size: var(--text-2xl);
    line-height: 1.4;
    color: var(--color-text-primary);
  }

  .framework__steps {
    display: flex;
    flex-direction: column;
  }

  /* Step */
  .step {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 80vh;
  }

  .step:nth-child(even) {
    direction: rtl;
  }

  .step:nth-child(even) > * {
    direction: ltr;
  }

  .step__image {
    position: relative;
    overflow: hidden;
  }

  .step__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .step__number {
    position: absolute;
    bottom: var(--space-xl);
    left: var(--space-xl);
    font-family: var(--font-mono);
    font-size: clamp(4rem, 10vw, 8rem);
    font-weight: 700;
    color: white;
    opacity: 0.3;
    line-height: 1;
  }

  .step:nth-child(even) .step__number {
    left: auto;
    right: var(--space-xl);
  }

  .step__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: var(--space-3xl) 0;
    max-width: 480px;
  }

  .step:nth-child(even) .step__content {
    margin-left: auto;
  }

  .step__meta {
    margin-bottom: var(--space-lg);
  }

  .step__duration {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius-sm);
    color: var(--color-text-muted);
  }

  .step__title {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 400;
    margin-bottom: var(--space-xs);
  }

  .step__subtitle {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent-primary);
    margin-bottom: var(--space-xl);
  }

  .step__description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-xl);
  }

  .step__cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .step__cta:hover {
    color: var(--color-accent-primary);
  }

  .step__arrow {
    transition: transform var(--transition-fast);
  }

  .step__cta:hover .step__arrow {
    transform: translateX(4px);
  }

  /* Gallery */
  .gallery {
    padding: var(--space-4xl) 0;
    overflow: hidden;
  }

  .gallery__title {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-accent-primary);
    margin-bottom: var(--space-2xl);
  }

  .gallery__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-sm);
  }

  .gallery__item {
    aspect-ratio: 1;
    overflow: hidden;
    opacity: 0;
    animation: fadeIn 0.6s ease forwards;
    animation-delay: var(--delay);
  }

  .gallery__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .gallery__item:hover img {
    transform: scale(1.05);
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  /* Details */
  .details {
    padding: var(--space-4xl) 0;
    background: var(--color-bg-secondary);
  }

  .details__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-2xl);
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-xl);
  }

  .details__card {
    padding: var(--space-2xl);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
  }

  .details__card-title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--color-border);
  }

  .details__list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-lg);
  }

  .details__list li {
    position: relative;
    padding-left: var(--space-lg);
    padding-bottom: var(--space-sm);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .details__list li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--color-accent-primary);
  }

  .details__best-for {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  /* Responsive */
  @media (max-width: 1100px) {
    .details__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-lg);
    }

    .details__card:last-child {
      grid-column: 1 / -1;
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 1024px) {
    .step {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .step:nth-child(even) {
      direction: ltr;
    }

    .step__image {
      height: 50vh;
      min-height: 300px;
    }

    .step__content {
      padding: var(--space-2xl) var(--container-padding);
      max-width: none;
    }

    .step:nth-child(even) .step__content {
      margin-left: 0;
    }

    .step__number {
      bottom: var(--space-md);
      left: var(--space-md);
    }

    .step:nth-child(even) .step__number {
      left: var(--space-md);
      right: auto;
    }

    .gallery__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .details__grid {
      grid-template-columns: 1fr;
      max-width: 450px;
    }

    .details__card:last-child {
      max-width: none;
    }
  }

  @media (max-width: 640px) {
    .hero {
      height: 60vh;
    }

    .quick-nav__items {
      grid-template-columns: 1fr;
    }

    .quick-nav__item {
      flex-direction: row;
      justify-content: space-between;
      border-right: none;
      border-bottom: 1px solid var(--color-border);
    }

    .quick-nav__item:last-child {
      border-bottom: none;
    }

    .step__image {
      height: 40vh;
    }
  }
</style>
