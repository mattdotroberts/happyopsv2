---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTASection from '../components/CTASection.astro';

const workshops = [
  {
    title: "Microsoft Operator",
    subtitle: "Master Microsoft Automation tools & Processes",
    description: "A general overview workshop to empower members of your organisation to start running with AI and automation.",
    goal: "Students will master Microsoft environment automation tools.",
    duration: "10 hours",
    sessions: "1.5h",
    price: "750",
    level: "Beginner - Advanced",
    format: "Online & In Person",
    featured: false,
  },
  {
    title: "Intro to AI Automation",
    subtitle: "Start automating tasks and learn the basics of automation",
    description: "Our flagship workshop that equips your team with the skills & mindset to 10x your growth.",
    goal: "Students will be able to enrich their work, save time and focus on the important parts of the business.",
    duration: "10 hours",
    sessions: "1.5h",
    price: "750",
    level: "Beginner",
    format: "Online & In Person",
    featured: true,
  },
  {
    title: "Master AI Automation",
    subtitle: "Build your first AI Agent and focus on what matters",
    description: "The next level of our flagship training. Master the best tools in the market and generate complex workflows and AI Agents.",
    goal: "Students will be able to create AI autonomous Agents and implement complex workflows.",
    duration: "20 hours",
    sessions: "3h",
    price: "1,250",
    level: "Advanced",
    format: "Online & In Person",
    featured: true,
  },
  {
    title: "Intro to Internal Apps",
    subtitle: "Learn how to create internal apps for your team",
    description: "A general overview workshop to empower members of your organisation to start solving internal problems with functional apps.",
    goal: "Students will understand the principals of AI, Automation and NoCode tools.",
    duration: "15 hours",
    sessions: "2h",
    price: "950",
    level: "Beginner",
    format: "Online & In Person",
    featured: false,
  },
  {
    title: "Custom Workshop",
    subtitle: "We customize our workshops to meet your specific needs",
    description: "Based on your team's requirements we generate a tailored workshop.",
    goal: "Adapt AI and Automation to the needs of your departments and customise use cases for your teams.",
    duration: "Customizable",
    sessions: "Flexible",
    price: "Custom",
    level: "Beginner - Advanced",
    format: "Online & In Person",
    featured: false,
  },
];

const features = [
  "EN & ES languages",
  "EU & UK availability",
  "15 Days Refund Policy",
  "Group discount available",
];
---

<BaseLayout
  title="Workshops"
  description="High impact AI and automation workshops tailored to your team. Learn to automate tasks, build AI agents, and transform your workflows."
>
  <div class="container">
    <header class="page-header">
      <span class="page-header__label">[WORKSHOPS]</span>
      <h1 class="page-header__title">Workshops</h1>
      <p class="page-header__subtitle">
        High impact workshops tailored to your team
      </p>
    </header>

    <hr />

    <section class="features-bar">
      <p class="features-bar__title">All our trainings offer:</p>
      <div class="features-bar__list">
        {features.map((feature) => (
          <span class="features-bar__item">{feature}</span>
        ))}
      </div>
    </section>

    <section class="workshops-grid">
      {workshops.map((workshop) => (
        <article class:list={['workshop-card', { 'workshop-card--featured': workshop.featured }]}>
          {workshop.featured && <span class="workshop-card__badge">Popular</span>}

          <div class="workshop-card__header">
            <h3 class="workshop-card__title">{workshop.title}</h3>
            <p class="workshop-card__subtitle">{workshop.subtitle}</p>
          </div>

          <div class="workshop-card__meta">
            <span class="workshop-card__meta-item">{workshop.duration}</span>
            <span class="workshop-card__meta-item">{workshop.format}</span>
            <span class="workshop-card__meta-item">{workshop.level}</span>
          </div>

          <p class="workshop-card__description">{workshop.description}</p>

          <p class="workshop-card__goal">
            <strong>Goal:</strong> {workshop.goal}
          </p>

          <div class="workshop-card__footer">
            <div class="workshop-card__pricing">
              {workshop.price !== "Custom" ? (
                <>
                  <span class="workshop-card__price">â‚¬{workshop.price}</span>
                  <span class="workshop-card__price-note">/person</span>
                </>
              ) : (
                <span class="workshop-card__price">Custom pricing</span>
              )}
            </div>
            {workshop.sessions !== "Flexible" && (
              <span class="workshop-card__sessions">{workshop.sessions} sessions</span>
            )}
          </div>

          <a href="/contact" class="button workshop-card__cta">
            Find out more
          </a>
        </article>
      ))}
    </section>
  </div>

  <CTASection
    headline="Not sure which workshop is right for your team?"
    description="Book a free discovery call and we'll recommend the best fit for your needs."
    ctaText="Schedule a Call"
    ctaHref="/contact"
    variant="centered"
  />
</BaseLayout>

<style>
  .page-header {
    padding: var(--space-2xl) 0;
    text-align: center;
  }

  .page-header__label {
    display: block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-accent-primary);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-md);
  }

  .page-header__title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-md);
  }

  .page-header__subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .features-bar {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-xl) 0;
    margin-bottom: var(--space-3xl);
  }

  .features-bar__title {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .features-bar__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-md);
  }

  .features-bar__item {
    padding: var(--space-xs) var(--space-md);
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius-sm);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .workshops-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: var(--space-xl);
    padding-bottom: var(--space-4xl);
  }

  .workshop-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: var(--space-xl);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    transition: border-color var(--transition-fast);
  }

  .workshop-card:hover {
    border-color: var(--color-accent-primary);
  }

  .workshop-card--featured {
    border-color: var(--color-accent-primary);
    background: linear-gradient(
      to bottom,
      color-mix(in srgb, var(--color-accent-primary) 5%, transparent),
      transparent
    );
  }

  .workshop-card__badge {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-accent-primary);
    color: var(--color-bg-primary);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    border-radius: var(--border-radius-sm);
  }

  .workshop-card__header {
    margin-bottom: var(--space-lg);
  }

  .workshop-card__title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-xs);
  }

  .workshop-card__subtitle {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
  }

  .workshop-card__meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .workshop-card__meta-item {
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
  }

  .workshop-card__description {
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-md);
    flex-grow: 1;
  }

  .workshop-card__goal {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    padding: var(--space-md);
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius-sm);
    margin-bottom: var(--space-lg);
  }

  .workshop-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-lg);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border-subtle);
  }

  .workshop-card__pricing {
    display: flex;
    align-items: baseline;
    gap: var(--space-xs);
  }

  .workshop-card__price {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-text-primary);
  }

  .workshop-card__price-note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .workshop-card__sessions {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .workshop-card__cta {
    width: 100%;
    text-align: center;
  }
</style>
