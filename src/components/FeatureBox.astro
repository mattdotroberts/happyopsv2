---
interface Props {
  label: string;
  headline: string;
  description: string;
  href: string;
  linkText?: string;
  external?: boolean;
  icon?: 'macos';
}

const { label, headline, description, href, linkText = "Explore", external = false, icon } = Astro.props;
---

<div class="feature-box-wrapper">
  <a
    href={href}
    class="feature-box"
    target={external ? "_blank" : undefined}
    rel={external ? "noopener noreferrer" : undefined}
  >
    <div class="feature-box__content">
      <span class="feature-box__label">{label}</span>
      {icon === 'macos' && (
        <div class="feature-box__icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
        </div>
      )}
      <h3 class="feature-box__headline">{headline}</h3>
      <p class="feature-box__description">{description}</p>
      <span class="feature-box__link">
        {linkText} <span class="feature-box__arrow">â†’</span>
      </span>
    </div>
  </a>
</div>

<style>
  .feature-box-wrapper {
    --box-scale: 0.85;
    --box-radius: 32px;
    --box-margin: 3rem;
    width: 100%;
  }

  .feature-box {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    min-height: 60vh;
    padding: var(--space-4xl) var(--space-2xl);
    background-color: var(--color-feature-bg);
    border-radius: var(--box-radius);
    margin: 0 var(--box-margin);
    text-decoration: none;
    overflow: hidden;
    transform: scale(var(--box-scale));
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1),
                border-radius 0.6s cubic-bezier(0.16, 1, 0.3, 1),
                margin 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Scroll-activated expanded state - stays narrower than full width */
  .feature-box-wrapper.expanded .feature-box {
    --box-scale: 1;
    --box-radius: 20px;
    --box-margin: 20px;
    transform: scale(1);
    border-radius: var(--box-radius);
    margin: 0 var(--box-margin);
  }

  .feature-box::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at 50% 100%,
      var(--color-feature-glow) 0%,
      transparent 50%
    );
    opacity: 0;
    transition: opacity 0.6s ease;
    pointer-events: none;
  }

  .feature-box:hover::before {
    opacity: 1;
  }

  .feature-box__content {
    max-width: 700px;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s,
                transform 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s;
  }

  .feature-box-wrapper.expanded .feature-box__content {
    opacity: 1;
    transform: translateY(0);
  }

  .feature-box__label {
    display: block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-accent-primary);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-xl);
  }

  .feature-box__icon {
    color: #A1A1A1;
    margin-bottom: var(--space-lg);
    transition: color 0.3s ease;
  }

  .feature-box:hover .feature-box__icon {
    color: #FAFAFA;
  }

  .feature-box__headline {
    font-family: var(--font-serif);
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 400;
    color: #FAFAFA;
    line-height: 1;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-lg);
  }

  .feature-box__description {
    font-family: var(--font-mono);
    font-size: var(--text-lg);
    color: #A1A1A1;
    line-height: var(--leading-relaxed);
    margin: 0 0 var(--space-2xl);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .feature-box__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-mono);
    font-size: var(--text-base);
    color: var(--color-accent-primary);
    padding: var(--space-sm) var(--space-lg);
    border: 1px solid var(--color-accent-primary);
    border-radius: var(--border-radius-sm);
    transition: all var(--transition-fast);
  }

  .feature-box:hover .feature-box__link {
    background: var(--color-accent-primary);
    color: #0A0A0A;
  }

  .feature-box__arrow {
    transition: transform var(--transition-fast);
  }

  .feature-box:hover .feature-box__arrow {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .feature-box-wrapper {
      --box-margin: 1rem;
    }

    .feature-box {
      min-height: 50vh;
      padding: var(--space-3xl) var(--space-xl);
    }

    .feature-box__headline {
      font-size: clamp(2.5rem, 10vw, 4rem);
    }

    .feature-box__description {
      font-size: var(--text-base);
    }
  }

  @media (max-width: 480px) {
    .feature-box-wrapper {
      --box-margin: 0.5rem;
    }

    .feature-box {
      min-height: 70vh;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .feature-box,
    .feature-box__content {
      transition: none;
      transform: none;
      opacity: 1;
    }

    .feature-box {
      border-radius: 0;
      margin: 0;
    }
  }
</style>
