---
interface EventData {
  title: string;
  date: Date;
  url: string;
  location?: string;
  type: 'Online' | 'In-Person';
}

interface Props {
  event?: EventData | null;
}

const { event } = Astro.props;

// Don't render if no event
if (!event) {
  return null;
}

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat('en-US', {
    weekday: 'short',
    month: 'short',
    day: 'numeric',
  }).format(date);
---

{event && (
  <div class="event-promo-banner">
    <div class="container event-promo-banner__inner">
      <div class="event-promo-banner__content">
        <span class="event-promo-banner__emoji">ðŸ“…</span>
        <span class="event-promo-banner__title">{event.title}</span>
        <span class="event-promo-banner__divider">|</span>
        <span class="event-promo-banner__date">{formatDate(event.date)}</span>
        <span class="event-promo-banner__badge" data-type={event.type.toLowerCase()}>
          {event.type}
        </span>
      </div>
      <a href={event.url} class="event-promo-banner__cta">
        View Event <span class="event-promo-banner__arrow">â†’</span>
      </a>
    </div>
  </div>
)}

<style>
  .event-promo-banner {
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-sm) 0;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    margin-top: calc(-1 * var(--space-3xl));
  }

  .event-promo-banner__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-md);
  }

  .event-promo-banner__content {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
    min-width: 0;
  }

  .event-promo-banner__emoji {
    flex-shrink: 0;
  }

  .event-promo-banner__title {
    color: var(--color-text-primary);
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 300px;
  }

  .event-promo-banner__divider {
    color: var(--color-text-muted);
    flex-shrink: 0;
  }

  .event-promo-banner__date {
    color: var(--color-text-secondary);
    flex-shrink: 0;
  }

  .event-promo-banner__badge {
    padding: 2px 8px;
    border-radius: 999px;
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    flex-shrink: 0;
  }

  .event-promo-banner__badge[data-type="online"] {
    background: rgba(59, 130, 246, 0.15);
    color: #3B82F6;
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .event-promo-banner__badge[data-type="in-person"] {
    background: rgba(34, 197, 94, 0.15);
    color: #22C55E;
    border: 1px solid rgba(34, 197, 94, 0.3);
  }

  [data-theme="dark"] .event-promo-banner__badge[data-type="online"] {
    background: rgba(59, 130, 246, 0.2);
    color: #60A5FA;
  }

  [data-theme="dark"] .event-promo-banner__badge[data-type="in-person"] {
    background: rgba(34, 197, 94, 0.2);
    color: #4ADE80;
  }

  .event-promo-banner__cta {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-accent-primary);
    text-decoration: none;
    font-weight: 500;
    white-space: nowrap;
    flex-shrink: 0;
    transition: color var(--transition-fast);
  }

  .event-promo-banner__cta:hover {
    color: var(--color-accent-secondary);
    text-decoration: none;
  }

  .event-promo-banner__arrow {
    transition: transform var(--transition-fast);
  }

  .event-promo-banner__cta:hover .event-promo-banner__arrow {
    transform: translateX(2px);
  }

  @media (max-width: 768px) {
    .event-promo-banner__inner {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }

    .event-promo-banner__title {
      max-width: 100%;
    }

    .event-promo-banner__divider {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .event-promo-banner__content {
      font-size: 11px;
    }

    .event-promo-banner__title {
      max-width: 180px;
    }
  }
</style>
