---
import type { BlogPost } from '../lib/notion';
import TagBadge from './TagBadge.astro';

interface Props {
  post: BlogPost;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
const { title, slug, image, publishedDate, tags, excerpt } = post;

const formattedDate = publishedDate
  ? publishedDate.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  : '';
---

{featured ? (
  <article class="blog-card blog-card--featured reveal">
    <a href={`/blog/${slug}`} class="blog-card__link">
      {image && (
        <div class="blog-card__image-wrapper">
          <img src={image} alt={title} class="blog-card__image" loading="lazy" />
          <div class="blog-card__overlay">
            <div class="blog-card__meta">
              <time datetime={publishedDate?.toISOString()}>{formattedDate}</time>
            </div>
            <h2 class="blog-card__title">{title}</h2>
            {excerpt && <p class="blog-card__excerpt">{excerpt}</p>}
          </div>
        </div>
      )}
      {!image && (
        <div class="blog-card__content blog-card__content--no-image">
          <div class="blog-card__meta">
            <time datetime={publishedDate?.toISOString()}>{formattedDate}</time>
          </div>
          <h2 class="blog-card__title">{title}</h2>
          {excerpt && <p class="blog-card__excerpt">{excerpt}</p>}
        </div>
      )}
    </a>
    {tags && tags.length > 0 && (
      <div class="blog-card__tags">
        {tags.map((tag) => (
          <TagBadge tag={tag} />
        ))}
      </div>
    )}
  </article>
) : (
  <article class="blog-card reveal">
    <a href={`/blog/${slug}`} class="blog-card__link">
      {image && (
        <img src={image} alt={title} class="blog-card__image" loading="lazy" />
      )}
      <div class="blog-card__content">
        <div class="blog-card__meta">
          <time datetime={publishedDate?.toISOString()}>{formattedDate}</time>
        </div>
        <h3 class="blog-card__title">{title}</h3>
      </div>
    </a>
    {tags && tags.length > 0 && (
      <div class="blog-card__tags">
        {tags.map((tag) => (
          <TagBadge tag={tag} />
        ))}
      </div>
    )}
  </article>
)}

<style>
  .blog-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    overflow: hidden;
    transition:
      transform var(--transition-lift),
      border-color var(--transition-fast),
      box-shadow var(--transition-fast);
  }

  .blog-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-accent-primary);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .blog-card__link {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .blog-card__image {
    width: 100%;
    height: auto;
    aspect-ratio: 4 / 3;
    object-fit: cover;
    border-radius: var(--border-radius-sm);
  }

  .blog-card__content {
    padding: var(--space-lg);
  }

  .blog-card__content--no-image {
    padding: var(--space-2xl);
  }

  .blog-card__meta {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-sm);
  }

  .blog-card__title {
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    line-height: var(--leading-snug);
    margin: 0;
    transition: color var(--transition-fast);
  }

  .blog-card__link:hover .blog-card__title {
    color: var(--color-accent-primary);
  }

  .blog-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    padding: 0 var(--space-lg) var(--space-lg);
  }

  /* Featured card styles */
  .blog-card--featured {
    grid-column: 1 / -1;
  }

  .blog-card--featured .blog-card__image-wrapper {
    position: relative;
  }

  .blog-card--featured .blog-card__image {
    aspect-ratio: 16 / 9;
    border-radius: 0;
  }

  .blog-card--featured .blog-card__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-2xl);
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      transparent 100%
    );
    color: white;
  }

  .blog-card--featured .blog-card__meta {
    color: rgba(255, 255, 255, 0.8);
  }

  .blog-card--featured .blog-card__title {
    font-size: var(--text-3xl);
    color: white;
    margin-bottom: var(--space-sm);
  }

  .blog-card--featured .blog-card__link:hover .blog-card__title {
    color: var(--color-accent-primary);
  }

  .blog-card--featured .blog-card__excerpt {
    color: rgba(255, 255, 255, 0.9);
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    margin: 0;
    max-width: 60ch;
  }

  .blog-card--featured .blog-card__tags {
    padding-top: var(--space-lg);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .blog-card--featured .blog-card__title {
      font-size: var(--text-2xl);
    }

    .blog-card--featured .blog-card__overlay {
      padding: var(--space-lg);
    }

    .blog-card--featured .blog-card__excerpt {
      display: none;
    }
  }
</style>
