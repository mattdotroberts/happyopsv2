---
import type { CollectionEntry } from 'astro:content';

interface Props {
  useCase: CollectionEntry<'useCases'>;
}

const { useCase } = Astro.props;
const { title, description, category, pubDate, headline } = useCase.data;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<article class="use-case-card">
  <a href={`/use-cases/${useCase.id}`} class="use-case-card__link">
    <div class="use-case-card__header">
      <span class="use-case-card__category">{category}</span>
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
    </div>

    <h3 class="use-case-card__title">{title}</h3>

    {headline && (
      <p class="use-case-card__headline">{headline}</p>
    )}

    <p class="use-case-card__excerpt">{description}</p>

    <span class="use-case-card__cta">Learn more &rarr;</span>
  </a>
</article>

<style>
  .use-case-card {
    padding: var(--space-xl);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    transition: border-color var(--transition-fast), transform var(--transition-fast);
  }

  .use-case-card:hover {
    border-color: var(--color-accent-primary);
    transform: translateY(-2px);
  }

  .use-case-card__link {
    display: block;
    color: inherit;
  }

  .use-case-card__link:hover {
    text-decoration: none;
  }

  .use-case-card__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-md);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .use-case-card__category {
    color: var(--color-accent-primary);
    font-weight: 600;
  }

  .use-case-card__header time {
    color: var(--color-text-muted);
  }

  .use-case-card__title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-sm);
    transition: color var(--transition-fast);
  }

  .use-case-card__link:hover .use-case-card__title {
    color: var(--color-accent-primary);
  }

  .use-case-card__headline {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-sm);
  }

  .use-case-card__excerpt {
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0 0 var(--space-md);
    font-size: var(--text-sm);
  }

  .use-case-card__cta {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-accent-primary);
  }
</style>
