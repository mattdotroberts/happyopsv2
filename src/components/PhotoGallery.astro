---
interface Props {
  images: Array<{
    src: string;
    alt?: string;
    caption?: string;
  }>;
  columns?: 2 | 3 | 4;
}

const { images, columns = 3 } = Astro.props;
---

<section class="photo-gallery">
  <div class="photo-gallery__grid" style={`--columns: ${columns}`}>
    {images.map((image, index) => (
      <button
        class="photo-gallery__item"
        data-gallery-item
        data-index={index}
        aria-label={`View ${image.alt || 'photo'}`}
      >
        <img
          src={image.src}
          alt={image.alt || ''}
          loading="lazy"
          class="photo-gallery__image"
        />
        <div class="photo-gallery__overlay">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
            <path d="M11 8v6"></path>
            <path d="M8 11h6"></path>
          </svg>
        </div>
      </button>
    ))}
  </div>
</section>

<script define:vars={{ images }}>
  const galleryItems = document.querySelectorAll('[data-gallery-item]');

  galleryItems.forEach((item) => {
    item.addEventListener('click', () => {
      const index = parseInt(item.getAttribute('data-index') || '0', 10);
      if (window.openLightbox) {
        window.openLightbox(images, index);
      }
    });
  });
</script>

<style>
  .photo-gallery {
    padding: var(--space-2xl) 0;
  }

  .photo-gallery__grid {
    display: grid;
    grid-template-columns: repeat(var(--columns), 1fr);
    gap: var(--space-md);
  }

  .photo-gallery__item {
    position: relative;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    border-radius: var(--border-radius-md);
    border: none;
    padding: 0;
    cursor: pointer;
    background: var(--color-bg-secondary);
  }

  .photo-gallery__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .photo-gallery__overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.4);
    color: white;
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .photo-gallery__item:hover .photo-gallery__image {
    transform: scale(1.05);
  }

  .photo-gallery__item:hover .photo-gallery__overlay {
    opacity: 1;
  }

  @media (max-width: 1024px) {
    .photo-gallery__grid {
      --columns: 2 !important;
    }
  }

  @media (max-width: 640px) {
    .photo-gallery__grid {
      --columns: 2 !important;
      gap: var(--space-sm);
    }
  }
</style>
