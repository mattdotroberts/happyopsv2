---
const currentYear = new Date().getFullYear();

const navigation = {
  services: [
    { label: "Workshops", href: "/workshops" },
    { label: "Case Study", href: "/case-study" },
    { label: "Use Cases", href: "/use-cases" },
  ],
  company: [
    { label: "About", href: "/about" },
    { label: "Contact", href: "/contact" },
    { label: "Privacy", href: "/privacy" },
  ],
  connect: [
    { label: "LinkedIn", href: "https://linkedin.com/company/happy-operators", external: true },
    { label: "Twitter", href: "https://twitter.com/happyoperators", external: true },
    { label: "HappyLabs.dev", href: "https://happylabs.dev", external: true },
  ],
};
---

<footer class="footer-modern">
  <div class="container container--wide">
    <div class="footer-modern__grid">
      <div class="footer-modern__brand">
        <a href="/" class="footer-modern__logo">
          <img src="/images/logo.png" alt="Happy Operators" class="footer-modern__logo-icon" />
          <span class="footer-modern__logo-text">Happy Operators</span>
        </a>
        <p class="footer-modern__tagline">
          AI & automation training for teams that want to work smarter.
        </p>
        <div class="footer-modern__founders">
          <div class="footer-modern__founders-images">
            <img src="/images/founders/matt.jpg" alt="Matt" class="footer-modern__founder-image" />
            <img src="/images/founders/rafa.jpg" alt="Rafa" class="footer-modern__founder-image" />
          </div>
          <span class="footer-modern__founders-names">Matt & Rafa</span>
        </div>
      </div>

      <nav class="footer-modern__nav" aria-label="Services">
        <h4 class="footer-modern__nav-title">Services</h4>
        <ul class="footer-modern__nav-list">
          {navigation.services.map((link) => (
            <li>
              <a href={link.href} class="footer-modern__nav-link">{link.label}</a>
            </li>
          ))}
        </ul>
      </nav>

      <nav class="footer-modern__nav" aria-label="Company">
        <h4 class="footer-modern__nav-title">Company</h4>
        <ul class="footer-modern__nav-list">
          {navigation.company.map((link) => (
            <li>
              <a href={link.href} class="footer-modern__nav-link">{link.label}</a>
            </li>
          ))}
        </ul>
      </nav>

      <nav class="footer-modern__nav" aria-label="Connect">
        <h4 class="footer-modern__nav-title">Connect</h4>
        <ul class="footer-modern__nav-list">
          {navigation.connect.map((link) => (
            <li>
              <a
                href={link.href}
                class="footer-modern__nav-link"
                target={link.external ? "_blank" : undefined}
                rel={link.external ? "noopener noreferrer" : undefined}
              >
                {link.label}
                {link.external && <span class="footer-modern__external">â†—</span>}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>

    <div class="footer-modern__bottom">
      <p class="footer-modern__copyright">
        &copy; {currentYear} Happy Operators. All rights reserved.
      </p>
      <div class="footer-modern__cta">
        <a href="/contact" class="button">Schedule a Chat</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-modern {
    border-top: 1px solid var(--color-border);
    padding: var(--space-4xl) 0 var(--space-2xl);
    margin-top: var(--space-5xl);
  }

  .footer-modern__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: var(--space-3xl);
    margin-bottom: var(--space-4xl);
  }

  .footer-modern__brand {
    max-width: 280px;
  }

  .footer-modern__logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .footer-modern__logo:hover {
    text-decoration: none;
  }

  .footer-modern__logo-icon {
    width: 28px;
    height: auto;
  }

  .footer-modern__logo-text {
    font-family: 'JetBrains Mono', var(--font-mono);
    font-size: var(--text-lg);
    font-weight: 500;
  }

  .footer-modern__tagline {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-lg);
  }

  .footer-modern__founders {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .footer-modern__founders-images {
    display: flex;
  }

  .footer-modern__founder-image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--color-bg-primary);
    margin-left: -8px;
  }

  .footer-modern__founder-image:first-child {
    margin-left: 0;
  }

  .footer-modern__founders-names {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .footer-modern__nav-title {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-lg);
  }

  .footer-modern__nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-modern__nav-link {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    transition: color var(--transition-fast);
  }

  .footer-modern__nav-link:hover {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .footer-modern__external {
    font-size: var(--text-xs);
    opacity: 0.5;
    margin-left: 2px;
  }

  .footer-modern__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border-subtle);
  }

  .footer-modern__copyright {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 1024px) {
    .footer-modern__grid {
      grid-template-columns: 1fr 1fr 1fr;
    }

    .footer-modern__brand {
      grid-column: 1 / -1;
      max-width: none;
      margin-bottom: var(--space-lg);
    }
  }

  @media (max-width: 640px) {
    .footer-modern {
      padding: var(--space-3xl) 0 var(--space-xl);
    }

    .footer-modern__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-xl);
    }

    .footer-modern__brand {
      grid-column: 1 / -1;
    }

    .footer-modern__bottom {
      flex-direction: column;
      gap: var(--space-lg);
      text-align: center;
    }
  }
</style>
