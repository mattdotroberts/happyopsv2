---
interface Props {
  quote: string;
  author: string;
  role: string;
}

const { quote, author, role } = Astro.props;
---

<blockquote class="testimonial-block">
  <p class="testimonial-block__quote">"{quote}"</p>
  <footer class="testimonial-block__footer">
    <cite class="testimonial-block__author">{author}</cite>
    <span class="testimonial-block__role">{role}</span>
  </footer>
</blockquote>

<style>
  .testimonial-block {
    position: relative;
    margin: 0;
    padding: var(--space-2xl);
    background: var(--color-bg-secondary);
    border-left: 4px solid var(--color-accent-primary);
    border-radius: 0 var(--border-radius-md) var(--border-radius-md) 0;
  }

  .testimonial-block__quote {
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-style: italic;
    color: var(--color-text-primary);
    line-height: var(--leading-relaxed);
    margin: 0 0 var(--space-lg);
  }

  .testimonial-block__footer {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .testimonial-block__author {
    font-family: var(--font-mono);
    font-size: var(--text-base);
    font-style: normal;
    font-weight: 500;
    color: var(--color-text-primary);
  }

  .testimonial-block__role {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .testimonial-block {
      padding: var(--space-lg);
    }

    .testimonial-block__quote {
      font-size: var(--text-lg);
    }
  }
</style>
