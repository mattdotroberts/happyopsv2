---
interface Props {
  headline: string;
  subtitle: string;
  primaryCta?: {
    text: string;
    href: string;
  };
  urgencyText?: string;
  socialProof?: {
    count: string;
    label: string;
    avatars: string[];
  };
}

const { headline, subtitle, primaryCta, urgencyText, socialProof } = Astro.props;

// Split headline into words for animation
const words = headline.split(' ');
---

<section class="hero-scroll">
  <div class="container container--wide hero-scroll__inner">
    <div class="hero-scroll__headline">
      <h1 class="hero-scroll__title" id="hero-title">
        {words.map((word, index) => (
          <span class="hero-word" data-index={index}>{word}</span>
        ))}
      </h1>
    </div>
    <div class="hero-scroll__content">
      <p class="hero-scroll__subtitle">{subtitle}</p>
      {primaryCta && (
        <div class="hero-scroll__ctas">
          <a href={primaryCta.href} class="button button--primary">
            {primaryCta.text}
          </a>
          {urgencyText && (
            <p class="hero-scroll__urgency">{urgencyText}</p>
          )}
        </div>
      )}
      {socialProof && (
        <div class="hero-scroll__social-proof">
          <div class="hero-scroll__avatars">
            {socialProof.avatars.map((avatar, i) => (
              <div class="hero-scroll__avatar" style={`--avatar-index: ${i}`}>
                {avatar ? (
                  <img src={avatar} alt="" loading="lazy" />
                ) : (
                  <span class="hero-scroll__avatar-placeholder"></span>
                )}
              </div>
            ))}
          </div>
          <div class="hero-scroll__social-text">
            <span class="hero-scroll__social-count">{socialProof.count}</span>
            <span class="hero-scroll__social-label">{socialProof.label}</span>
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<script>
  // Scroll-based word highlight animation
  const heroTitle = document.getElementById('hero-title');
  const words = heroTitle?.querySelectorAll('.hero-word');

  if (words && words.length > 0) {
    const updateWordHighlights = () => {
      const heroSection = document.querySelector('.hero-scroll') as HTMLElement;
      if (!heroSection) return;

      // Use offsetTop (document-relative) instead of getBoundingClientRect (viewport-relative)
      // This fixes the issue where sticky positioning breaks the animation
      const sectionTop = heroSection.offsetTop;
      const sectionHeight = heroSection.offsetHeight;
      const scrollY = window.scrollY;

      // Progress: starts before user scrolls (negative offset), completes very quickly
      // This makes words start turning white immediately on the slightest scroll
      const startOffset = sectionTop - 50;
      const endOffset = sectionTop + (sectionHeight * 0.08);
      const scrollProgress = Math.max(0, Math.min(1,
        (scrollY - startOffset) / (endOffset - startOffset)
      ));

      const wordsToHighlight = Math.floor(scrollProgress * (words.length + 1));

      words.forEach((word, index) => {
        word.classList.toggle('highlighted', index < wordsToHighlight);
      });
    };

    // Initial highlight of first few words
    const initHighlight = () => {
      words.forEach((word, index) => {
        if (index < 3) {
          word.classList.add('highlighted');
        }
      });
    };

    // Add requestAnimationFrame throttling for smooth performance
    let ticking = false;
    const onScroll = () => {
      if (!ticking) {
        requestAnimationFrame(() => {
          updateWordHighlights();
          ticking = false;
        });
        ticking = true;
      }
    };

    window.addEventListener('scroll', onScroll, { passive: true });
    initHighlight();
    requestAnimationFrame(updateWordHighlights);
  }
</script>

<style>
  .hero-scroll {
    padding: var(--space-5xl) 0;
    min-height: 70vh;
    display: flex;
    align-items: center;
  }

  .hero-scroll__inner {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-4xl);
    align-items: start;
  }

  .hero-scroll__headline {
    position: sticky;
    top: 120px;
  }

  .hero-scroll__title {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 5vw + 1rem, 4.5rem);
    font-weight: 500;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin: 0;
  }

  .hero-word {
    display: inline;
    color: var(--color-text-muted);
    transition: color 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .hero-word::after {
    content: ' ';
  }

  .hero-word.highlighted {
    color: var(--color-text-primary);
  }

  /* Underline effect for key words */
  .hero-word:nth-child(2), /* "AI" */
  .hero-word:nth-child(3) { /* "transformation" */
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
    text-decoration-color: var(--color-text-muted);
    transition: color 0.4s cubic-bezier(0.16, 1, 0.3, 1),
                text-decoration-color 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .hero-word:nth-child(2).highlighted,
  .hero-word:nth-child(3).highlighted {
    text-decoration-color: var(--color-accent-primary);
  }

  .hero-scroll__content {
    padding-top: var(--space-xl);
  }

  .hero-scroll__subtitle {
    font-family: var(--font-serif);
    font-size: var(--text-2xl);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0 0 var(--space-2xl);
  }

  .hero-scroll__ctas {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: flex-start;
  }

  .hero-scroll__ctas .button {
    font-size: var(--text-xl);
    padding: var(--space-lg) var(--space-2xl);
    font-weight: 600;
  }

  .hero-scroll__urgency {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-accent-primary);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin: 0;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  /* Social proof */
  .hero-scroll__social-proof {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-top: var(--space-xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border-subtle);
  }

  .hero-scroll__avatars {
    display: flex;
  }

  .hero-scroll__avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 3px solid var(--color-bg-primary);
    overflow: hidden;
    margin-left: -14px;
    position: relative;
    z-index: calc(10 - var(--avatar-index));
    background: var(--color-bg-secondary);
  }

  .hero-scroll__avatar:first-child {
    margin-left: 0;
  }

  /* Layer the rest behind after first 5 */
  .hero-scroll__avatar:nth-child(n+6) {
    margin-left: -30px;
    opacity: 0.7;
  }

  .hero-scroll__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-scroll__avatar-placeholder {
    display: block;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-accent-primary) 0%, var(--color-accent-secondary, #ff8c42) 100%);
  }

  .hero-scroll__social-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .hero-scroll__social-count {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .hero-scroll__social-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  /* Dark mode adjustments */
  [data-theme="dark"] .hero-word {
    color: var(--color-text-muted);
  }

  [data-theme="dark"] .hero-word.highlighted {
    color: var(--color-text-primary);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-scroll__inner {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .hero-scroll__headline {
      position: relative;
      top: 0;
    }

    .hero-scroll {
      min-height: auto;
      padding: var(--space-4xl) 0;
    }
  }

  @media (max-width: 640px) {
    .hero-scroll {
      padding: var(--space-2xl) 0;
    }

    .hero-scroll__title {
      font-size: clamp(2rem, 8vw, 3rem);
    }

    .hero-scroll__subtitle {
      font-size: var(--text-lg);
    }

    .hero-scroll__ctas .button {
      width: 100%;
      justify-content: center;
    }

    .hero-scroll__urgency {
      align-self: center;
    }

    .hero-scroll__social-proof {
      justify-content: center;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-word {
      transition: none;
      color: var(--color-text-primary);
    }

    .hero-word:nth-child(2),
    .hero-word:nth-child(3) {
      text-decoration-color: var(--color-accent-primary);
    }
  }
</style>
