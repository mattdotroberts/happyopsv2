---
interface Props {
  headline: string;
  subtitle?: string;
  primaryCta?: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
}

const { headline, subtitle, primaryCta, secondaryCta } = Astro.props;
---

<section class="minimal-hero">
  <div class="container minimal-hero__inner">
    <h1 class="minimal-hero__headline reveal">{headline}</h1>
    {subtitle && (
      <p class="minimal-hero__subtitle reveal">{subtitle}</p>
    )}

    {(primaryCta || secondaryCta) && (
      <div class="minimal-hero__ctas reveal">
        {primaryCta && (
          <a href={primaryCta.href} class="button button--primary">
            {primaryCta.text}
          </a>
        )}
        {secondaryCta && (
          <a href={secondaryCta.href} class="button">
            {secondaryCta.text}
          </a>
        )}
      </div>
    )}
  </div>
</section>

<style>
  .minimal-hero {
    padding: var(--space-5xl) 0 var(--space-3xl);
    text-align: center;
  }

  .minimal-hero__inner {
    max-width: 900px;
  }

  .minimal-hero__headline {
    font-family: var(--font-serif);
    font-size: var(--text-5xl);
    font-weight: 500;
    line-height: 1.1;
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-xl);
  }

  .minimal-hero__subtitle {
    font-family: var(--font-mono);
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-2xl);
    line-height: var(--leading-relaxed);
  }

  .minimal-hero__ctas {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .minimal-hero {
      padding: var(--space-3xl) 0 var(--space-2xl);
    }

    .minimal-hero__headline {
      font-size: var(--text-4xl);
    }
  }

  @media (max-width: 640px) {
    .minimal-hero {
      padding: var(--space-2xl) 0;
    }

    .minimal-hero__headline {
      font-size: var(--text-3xl);
    }

    .minimal-hero__ctas {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
